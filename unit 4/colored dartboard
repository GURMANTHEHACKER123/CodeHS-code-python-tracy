speed(0)
radius = 100
def draw_circle():
    begin_fill()
    color(color_choice)
    circle(radius)
    end_fill()

penup()
setposition(0,-100)

for i in range(4):
    pendown()
    color_choice = input("pick a color ")
    color(color_choice)
    penup()
    draw_circle()
    left(90)
    forward(25)
    right(90)
    radius = radius - 25
